
<% if (success && success.length) { %>
    <div class="alert alert-success  d-flex align-items-center alert-dismissible fade show " role="alert" style="margin-top: 3.5rem;">
          <b style="font-size: 1.3rem;"><%= success %></b>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
 
<% } %>

<% if (error && error.length) { %>
    <div class="alert alert-danger d-flex align-items-center alert-dismissible fade show" role="alert" style="margin-top: 3.5rem;">
        
      <b style="font-size: 1.3rem;"><%= error %></b>
        
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
 
<% } %>